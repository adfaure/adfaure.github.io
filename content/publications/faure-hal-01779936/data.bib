 keywords = {Simgrid, gestion de tâches et de ressources , ordonnancement , simulation},
 month = {April},
 note = {working paper or preprint},
 pdf = {https://hal.inria.fr/hal-01779936/file/paper.pdf},
 title = {Évaluation d'algorithmes d'ordonnancement par simulation réaliste},
